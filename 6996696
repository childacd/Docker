template = (
    "Today COB: ${CURRENT_COB_DATE}, "
    "Yesterday COB: ${CURRENT_COB_DATE - 1 : yyyyMMdd}, "
    "COB-3: ${CURRENT_COB_DATE - 3}"
)

print(replace_variables(template))

